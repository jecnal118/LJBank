@model IEnumerable<BankProject.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Clientele</h2>

<p>
    @Html.ActionLink("Add Banker", "Create") |
    @Html.ActionLink("View All Accounts", "Index", "bankAccounts") |
    @Html.ActionLink("Transactions", "Index", "TransHists") |
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customerID)
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.state)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tele)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.locked)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(t => t.lName))
    {
        if (!item.locked)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lName), @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tele)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.locked)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.customerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.customerID }) |
                    @Html.ActionLink("Add Account", "Create", "bankAccounts", new { id = item.customerID }, null)
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lName), @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tele)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.locked)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.customerID })
                </td>
            </tr>
        }
    }

</table>
