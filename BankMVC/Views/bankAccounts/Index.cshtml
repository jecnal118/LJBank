@model IEnumerable<BankProject.bankAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Return to Client List", "Index", "Customers") | 
    @Html.ActionLink("Transactions", "Index", "TransHists")
</p>
<table class="table">
    <tr>
        <th>
            Account
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.interest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.locked)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(t => t.accountID))
    {
        if (!item.locked)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.accountID)-@Html.DisplayFor(modelItem => item.customer.customerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer.lName), @Html.DisplayFor(modelItem => item.customer.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.interest)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.locked)
                </td>
                <td>
                    @Html.ActionLink("Withdraw", "Withdraw", new { id = item.accountID }) |
                    @Html.ActionLink("Deposit", "Deposit", new { id = item.accountID }) |
                    @Html.ActionLink("Close Account", "CLose", new { id = item.accountID })
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.accountID)-@Html.DisplayFor(modelItem => item.customer.customerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer.lName), @Html.DisplayFor(modelItem => item.customer.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.interest)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.locked)
                </td>
                <td></td>
            </tr>
        }
    }

</table>
