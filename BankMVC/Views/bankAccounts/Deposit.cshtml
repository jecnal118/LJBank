@model BankProject.bankAccount

@{
    ViewBag.Title = "Deposit";

}

<h2>Deposit</h2>

@using (Html.BeginForm("Deposit", "bankAccounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.accountID)


        <div class="form-group">
            <h4>
                Account: @Html.TextBoxFor(model => model.accountID, new { @class = "form-control", @readonly = "true" })
                Current Balance:<br />
                <strong>@Html.DisplayFor(model => model.balance)</strong><br />
                Withdraw Amount: <input type="number" name="balance" class="form-control" min="1"/><br />
                <input type="submit" value="Deposit" class="btn btn-default" />
            </h4>
            @Html.ActionLink("Back to List", "userAccounts", new { id = Model.customerID })
        </div>
    </div>
}

